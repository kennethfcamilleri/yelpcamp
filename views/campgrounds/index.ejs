<% include ../partials/header %>

<div class="container">
    
    <div class="jumbotron">
        <h1 class="display-4">Welcome to Yelp Camp</h1>
        <p class="lead">View our hand-picked campgrounds from all over the world.</p>
        <a class="btn btn-primary" href="/campgrounds/new" role="button">Add New Campground</a>
    </div>

    <div class="row text-center">
    <% campgrounds.forEach(function(campground) { %>
        <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
            <div class="card">
              <img class="card-img-top" src="<%= campground.image %>" alt="<%= campground.name %>">
              <div class="card-body">
                <p class="card-text"><%= campground.name %></p>
                <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
              </div>
            </div>
        </div>
        <% }); %>
    </div>

<% include ../partials/footer %>